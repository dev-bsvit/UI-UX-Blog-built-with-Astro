---
// CreateArticleModal.astro
---

<div id="create-article-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-2xl w-full max-w-4xl max-h-[90vh] overflow-hidden">
    <!-- Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Створити нову статтю</h2>
      </div>
      <button id="close-modal" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="max-h-[calc(90vh-140px)] overflow-y-auto">
      <form id="article-form" class="p-6 space-y-6">
        <!-- Заголовок статьи -->
        <div>
          <label for="article-title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Заголовок статті *
          </label>
          <input
            type="text"
            id="article-title"
            name="title"
            required
            placeholder="Введіть заголовок статті..."
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
          />
        </div>

        <!-- Описание -->
        <div>
          <label for="article-description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Опис статті *
          </label>
          <textarea
            id="article-description"
            name="description"
            required
            rows="3"
            placeholder="Короткий опис статті..."
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
          ></textarea>
        </div>

        <!-- Контент статьи -->
        <div>
          <label for="article-content" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Контент статті *
          </label>
          <textarea
            id="article-content"
            name="content"
            required
            rows="10"
            placeholder="Напишіть вашу статтю тут... Ви можете використовувати Markdown."
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 font-mono text-sm"
          ></textarea>
        </div>

        <!-- Ряд с категорией и тегами -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Категория -->
          <div>
            <label for="article-category" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Категорія *
            </label>
            <select
              id="article-category"
              name="category"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
            >
              <option value="">Оберіть категорію</option>
              <option value="Дизайн">Дизайн</option>
              <option value="Дослідження">Дослідження</option>
              <option value="Доступність">Доступність</option>
              <option value="Розробка">Розробка</option>
              <option value="Тренди">Тренди</option>
            </select>
          </div>

          <!-- Время чтения -->
          <div>
            <label for="article-reading-time" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Час читання
            </label>
            <input
              type="text"
              id="article-reading-time"
              name="readingTime"
              placeholder="5 хв читання"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
            />
          </div>
        </div>

        <!-- Теги -->
        <div>
          <label for="article-tags" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Теги *
          </label>
          <input
            type="text"
            id="article-tags"
            name="tags"
            required
            placeholder="Введіть теги через кому: Дизайн, UI, UX"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
          />
        </div>

        <!-- Автор -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="author-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Ім'я автора
            </label>
            <input
              type="text"
              id="author-name"
              name="authorName"
              placeholder="Ваше ім'я"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
            />
          </div>
          <div>
            <label for="author-bio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Про автора
            </label>
            <input
              type="text"
              id="author-bio"
              name="authorBio"
              placeholder="Короткий опис автора"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
            />
          </div>
        </div>

        <!-- Обложка статьи -->
        <div>
          <label for="article-cover" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Обкладинка статті
          </label>
          <div class="flex items-center space-x-4">
            <div 
              id="cover-preview" 
              class="w-32 h-20 bg-gray-100 dark:bg-gray-800 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 flex items-center justify-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              <div class="text-center">
                <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-xs text-gray-500 dark:text-gray-400">Завантажити</p>
              </div>
            </div>
            <input
              type="file" 
              id="article-cover" 
              name="coverImage"
              accept="image/*"
              class="hidden"
            />
            <div class="flex-1">
              <p class="text-sm text-gray-600 dark:text-gray-400">Рекомендований розмір: 1200x630px</p>
              <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG або WebP до 5MB</p>
            </div>
          </div>
        </div>

        <!-- Рекомендуемая статья -->
        <div class="flex items-center space-x-3">
          <input
            type="checkbox"
            id="article-featured"
            name="featured"
            class="w-5 h-5 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 focus:ring-2"
          />
          <label for="article-featured" class="text-sm font-medium text-gray-700 dark:text-gray-300">
            Рекомендована стаття
          </label>
        </div>

        <!-- Кнопки -->
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200 dark:border-gray-700">
          <button
            type="button"
            id="cancel-article"
            class="px-6 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors"
          >
            Скасувати
          </button>
          <button
            type="submit"
            class="px-6 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all duration-200 font-medium"
          >
            Опублікувати статтю
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Уведомления -->
<div id="notification" class="fixed top-4 right-4 z-60 hidden">
  <div class="bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center space-x-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>
    <span id="notification-message">Стаття успішно створена!</span>
  </div>
</div>

<script>
  // Ждем полной загрузки DOM
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, initializing modal');
    
    // Открытие модального окна
    const openModalBtn = document.getElementById('open-create-modal');
    const openModalMobileBtn = document.getElementById('open-create-modal-mobile');
    const modal = document.getElementById('create-article-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-article');
    const form = document.getElementById('article-form');
    const notification = document.getElementById('notification');
    const notificationMessage = document.getElementById('notification-message');

    console.log('Modal elements found:', {
      openModalBtn: !!openModalBtn,
      openModalMobileBtn: !!openModalMobileBtn,
      modal: !!modal,
      closeModalBtn: !!closeModalBtn,
      cancelBtn: !!cancelBtn,
      form: !!form
    });

    // Функция для открытия модального окна
    function openModal() {
      console.log('openModal called');
      
      // ВРЕМЕННО: Отключаем проверку авторизации для тестирования
      // const user = localStorage.getItem('user');
      // console.log('User from localStorage:', user);
      
      // if (!user) {
      //   alert('Для публікації статей потрібно увійти в систему через Google');
      //   return;
      // }
      
      if (modal) {
        console.log('Opening modal');
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      } else {
        console.error('Modal element not found');
      }
    }

    // Открыть модальное окно (десктоп и мобильная кнопки)
    openModalBtn?.addEventListener('click', (e) => {
      console.log('Desktop button clicked');
      e.preventDefault();
      openModal();
    });
    
    openModalMobileBtn?.addEventListener('click', (e) => {
      console.log('Mobile button clicked');
      e.preventDefault();
      openModal();
    });

    // Закрыть модальное окно
    function closeModal() {
      console.log('closeModal called');
      modal?.classList.add('hidden');
      document.body.style.overflow = 'auto';
      form?.reset();
    }

    closeModalBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);

    // Закрытие по клику вне модального окна
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Закрытие по Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });

  // Показать уведомление
  function showNotification(message, isSuccess = true) {
    if (notificationMessage && notification) {
      notificationMessage.textContent = message;
      
      // Изменяем цвет в зависимости от типа
      const notificationDiv = notification.querySelector('div');
      if (notificationDiv) {
        if (isSuccess) {
          notificationDiv.className = 'bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center space-x-2 max-w-md';
        } else {
          notificationDiv.className = 'bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center space-x-2 max-w-md';
        }
      }
      
      notification.classList.remove('hidden');
      
      // Увеличиваем время для инструкций
      const timeout = message.includes('Збережіть файл') ? 15000 : 5000;
      setTimeout(() => {
        notification.classList.add('hidden');
      }, timeout);
    }
  }

  // Обработка отправки формы
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn?.textContent;
    
    // Показываем состояние загрузки
    if (submitBtn) {
      submitBtn.textContent = 'Створюємо...';
      submitBtn.disabled = true;
    }
    
    try {
      const formData = new FormData(form);
      
      // Собираем данные в объект
      const data = {
        title: formData.get('title'),
        description: formData.get('description'),
        content: formData.get('content'),
        category: formData.get('category'),
        tags: formData.get('tags'),
        readingTime: formData.get('readingTime') || '5 хв читання',
        authorName: formData.get('authorName') || 'Автор блогу',
        authorBio: formData.get('authorBio') || 'Автор статей блогу',
        featured: formData.get('featured') === 'on'
      };
      
      // Валидация
      if (!data.title || !data.description || !data.content || !data.category || !data.tags) {
        showNotification('Заповніть всі обов\'язкові поля', false);
        return;
      }
      
      // Создаем slug из заголовка
      const slug = data.title
        .toLowerCase()
        .replace(/[^a-z0-9а-я\s-]/g, '')
        .replace(/\s+/g, '-')
        .replace(/-+/g, '-')
        .trim();
      
      // Парсим теги
      const tagsArray = data.tags.split(',').map(tag => tag.trim()).filter(tag => tag);
      
      // Текущая дата
      const now = new Date();
      const publishedAt = now.toISOString().split('T')[0];
      
      // Создаем frontmatter
      const frontmatter = `---
title: "${data.title.replace(/"/g, '\\"')}"
description: "${data.description.replace(/"/g, '\\"')}"
publishedAt: "${publishedAt}"
author:
  name: "${data.authorName.replace(/"/g, '\\"')}"
  bio: "${data.authorBio.replace(/"/g, '\\"')}"
excerpt: "${data.description.replace(/"/g, '\\"')}"
tags: [${tagsArray.map(tag => `"${tag.replace(/"/g, '\\"')}"`).join(', ')}]
category: "${data.category.replace(/"/g, '\\"')}"
readingTime: "${data.readingTime.replace(/"/g, '\\"')}"
featured: ${data.featured}
seo:
  metaTitle: "${data.title.replace(/"/g, '\\"')} | UI/UX Блог"
  metaDescription: "${data.description.replace(/"/g, '\\"')}"
---

${data.content}
`;

      // Создаем файл для скачивания
      const blob = new Blob([frontmatter], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `${slug}.mdx`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);

      showNotification(`Файл статті створено! Збережіть файл "${slug}.mdx" у папку src/content/posts/ та перезапустіть сервер`, true);
      closeModal();
      
    } catch (error) {
      console.error('Error:', error);
      showNotification('Помилка при створенні статті', false);
    } finally {
      // Восстанавливаем кнопку
      if (submitBtn && originalText) {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    }
  });

  // Обработка загрузки обложки
  const coverInput = document.getElementById('article-cover');
  const coverPreview = document.getElementById('cover-preview');

  // Клик по области загрузки
  coverPreview?.addEventListener('click', () => {
    coverInput?.click();
  });

  coverInput?.addEventListener('change', (e) => {
    const file = e.target.files?.[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        if (coverPreview && e.target?.result) {
          coverPreview.innerHTML = `
            <img src="${e.target.result}" alt="Preview" class="w-full h-full object-cover rounded-lg" />
          `;
        }
      };
      reader.readAsDataURL(file);
    }
  });
  }); // Закрывающая скобка для DOMContentLoaded
</script>

<style>
  /* Анимации для модального окна */
  #create-article-modal {
    animation: fadeIn 0.3s ease-out;
  }

  #create-article-modal > div {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideIn {
    from { 
      opacity: 0; 
      transform: translateY(-20px) scale(0.95);
    }
    to { 
      opacity: 1; 
      transform: translateY(0) scale(1);
    }
  }

  /* Стили для скроллбара */
  .overflow-y-auto::-webkit-scrollbar {
    width: 6px;
  }

  .overflow-y-auto::-webkit-scrollbar-track {
    background: transparent;
  }

  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  .dark .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #4b5563;
  }

  .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }

  .dark .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style> 