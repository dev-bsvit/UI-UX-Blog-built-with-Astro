<script>
  document.addEventListener('DOMContentLoaded', () => {
    // –ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å—á–µ—Ç—á–∏–∫–∏
    function animateCounter(element: HTMLElement, target: number, duration: number = 2000) {
      let start = 0;
      const increment = target / (duration / 16);
      
      const timer = setInterval(() => {
        start += increment;
        if (start >= target) {
          element.textContent = target.toString();
          clearInterval(timer);
        } else {
          element.textContent = Math.floor(start).toString();
        }
      }, 16);
    }

    // –ü–æ–ª—É—á–∞–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –∏–∑ localStorage
    const articlesCount = 4; // –ü—Ä–∏–º–µ—Ä–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å—Ç–∞—Ç–µ–π
    const categoriesCount = 6; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
    
    // –ü–æ–¥—Å—á–∏—Ç—ã–≤–∞–µ–º –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏
    const allComments = JSON.parse(localStorage.getItem('comments') || '{}');
    const totalComments = Object.values(allComments).reduce((sum: number, comments: any) => {
      return sum + (Array.isArray(comments) ? comments.length : 0);
    }, 0);
    
    // –ü–æ–¥—Å—á–∏—Ç—ã–≤–∞–µ–º –ø—Ä–æ—Å–º–æ—Ç—Ä—ã
    const allViews = JSON.parse(localStorage.getItem('post_views') || '{}');
    const totalViews = Object.values(allViews).reduce((sum: number, views: any) => {
      return sum + (typeof views === 'number' ? views : 0);
    }, 0);

    // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é —Å—á–µ—Ç—á–∏–∫–æ–≤ –ø—Ä–∏ –ø–æ—è–≤–ª–µ–Ω–∏–∏ –≤ viewport
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          const elementId = element.id;
          
          switch (elementId) {
            case 'articles-count':
              animateCounter(element, articlesCount);
              break;
            case 'categories-count':
              animateCounter(element, categoriesCount);
              break;
            case 'comments-count':
              animateCounter(element, totalComments);
              break;
            case 'views-count':
              animateCounter(element, totalViews);
              break;
          }
          
          observer.unobserve(element);
        }
      });
    }, { threshold: 0.5 });

    // –ù–∞–±–ª—é–¥–∞–µ–º –∑–∞ —Å—á–µ—Ç—á–∏–∫–∞–º–∏
    const counters = document.querySelectorAll('#articles-count, #categories-count, #comments-count, #views-count');
    counters.forEach(counter => observer.observe(counter));
  });
</script>

